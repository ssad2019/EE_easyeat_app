<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/food_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/sample_food"/>

    <TextView
        android:id="@+id/food_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="薯条"
        android:textSize="30dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/food_img"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/food_prices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$6"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/food_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/food_line"
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#DCDCDC"
        app:layout_constraintTop_toBottomOf="@id/food_prices" />

    <TextView
        android:id="@+id/food_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/food_line"
        android:textSize="20dp"
        android:padding="10dp"
        android:lineSpacingExtra="5dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:text="大家很多人都知道薯条的英文是“Chips”，美国薯条薯条人称之为“French Fries”，其实它真正的来源地是比利时。早在1680年的时候，比利时人就开始制作这种薯条了 [1]  。在第一次世界大战的时候，美国士兵在比利时吃到了这种薯条，觉得特别美味，从而变得流行起来。但他们想当然的称其为“French”，是因为当时在比利时军队中的通用语言是法语，他们就以为是“法国的薯条”了。"/>

    <Button
        android:id="@+id/sub_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="—"
        android:background="@drawable/btn_add_style"
        app:layout_constraintRight_toLeftOf="@id/food_count"
        app:layout_constraintBottom_toBottomOf="@id/add_btn"
        />

    <TextView
        android:id="@+id/food_count"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="1"
        app:layout_constraintRight_toLeftOf="@id/add_btn"
        app:layout_constraintBottom_toBottomOf="@id/add_btn"
        />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text=" + 添加到购物车"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_add_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/food_prices"
        />

    <Button
        android:id="@+id/order_list_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_weight="3"
        android:text="总价:                                 20"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/btn_left_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/order_make_btn"
        />

    <Button
        android:id="@+id/order_make_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/btn_right_selected_style"
        android:text="去结算"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/order_list_btn"
        />

    <ListView
        android:id="@id/order_list"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="@id/order_list_btn"
        app:layout_constraintRight_toRightOf="@id/order_make_btn"
        app:layout_constraintBottom_toTopOf="@id/order_list_btn"
        android:visibility="gone"
        android:background="@color/White"
        />

</android.support.constraint.ConstraintLayout>