<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shop_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@mipmap/sample_shop_img"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="薯条店"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/shop_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:lines="3"
        android:ellipsize="end"
        android:text="大家很多人都知道薯条的英文是“Chips”，美国薯条薯条人称之为“French Fries”，其实它真正的来源地是比利时。早在1680年的时候，比利时人就开始制作这种薯条了 [1]  。在第一次世界大战的时候，美国士兵在比利时吃到了这种薯条，觉得特别美味，从而变得流行起来。但他们想当然的称其为“French”，是因为当时在比利时军队中的通用语言是法语，他们就以为是“法国的薯条”了。"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/shop_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_name"
        app:layout_constraintBottom_toBottomOf="@id/shop_img"/>

    <View
        android:id="@+id/line"
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#DCDCDC"
        app:layout_constraintTop_toBottomOf="@id/shop_img"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ListView
        android:id="@+id/food_type"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/food_detail">
    </ListView>

    <com.example.lianghw.easyeat.PinnedListView
        android:id="@+id/food_detail"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="3"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/food_type"
        app:layout_constraintRight_toRightOf="parent">
    </com.example.lianghw.easyeat.PinnedListView>

    <Button
        android:id="@+id/order_list_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_weight="3"
        android:text="总价:                                 20"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/btn_left_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/order_make_btn"
        />

    <Button
        android:id="@+id/order_make_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/btn_right_selected_style"
        android:text="去结算"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/order_list_btn"
        />
</android.support.constraint.ConstraintLayout>

