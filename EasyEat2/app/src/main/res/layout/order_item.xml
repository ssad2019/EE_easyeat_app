<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/food_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/sample_food"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="薯条"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/food_img"
        app:layout_constraintLeft_toRightOf="@id/food_img"
        />

    <TextView
        android:id="@+id/price_icon"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="￥"
        android:textSize="15dp"
        android:gravity="bottom"
        android:textColor="@color/red"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/food_img"
        app:layout_constraintLeft_toRightOf="@id/food_img"
        />

    <TextView
        android:id="@+id/food_prices"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="6"
        android:textSize="20dp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/food_img"
        app:layout_constraintLeft_toRightOf="@id/price_icon"
        />

    <Button
        android:id="@+id/sub_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="—"
        android:background="@drawable/del_style"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/food_count"
        app:layout_constraintBottom_toBottomOf="@id/food_img"
        />

    <TextView
        android:id="@+id/food_count"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="1"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/add_btn"
        app:layout_constraintBottom_toBottomOf="@id/food_img"
        />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="+"
        android:background="@drawable/add_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/food_img"
        />
</android.support.constraint.ConstraintLayout>